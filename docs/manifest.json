{
  "name": "Mijoro Boutique - Produits Numériques et Physiques",
  "short_name": "Mijoro",
  "description": "Boutique en ligne malagasy - eBooks, formations vidéo, applications et produits physiques. Livraison rapide Madagascar.",
  "lang": "fr-MG",
  "dir": "ltr",
  
"start_url": "/Mijoro-boutique/?source=pwa",
"scope": "/Mijoro-boutique/",
"id": "/Mijoro-boutique/?source=pwa",
  
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  
  "background_color": "#0a0e17",
  "theme_color": "#4ade80",
  "orientation": "portrait-primary",
  
  "icons": [
    {
      "src": "./icons/android-launchericon-72-72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./icons/512×512-monochrome.png",
      "sizes": "512×512",
      "type": "image/png",
      "purpose": "monochrome"
    },
    {
      "src": "./icons/android-launchericon-144-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./icons/android-launchericon-192-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./icons/maskable_icon_x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "./icons/android-launchericon-512-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./icons/maskable_icon_x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  
  "screenshots": [
    {
      "src": "./screenshots/mobile-home.png",
      "sizes": "540x960",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Page d'accueil Mijoro Boutique"
    },
    {
      "src": "./screenshots/mobile-shop.png",
      "sizes": "540x960",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Catalogue de produits"
    },
    {
      "src": "./screenshots/desktop-home.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Vue desktop"
    }
  ],
  
  "categories": ["shopping", "business", "education", "productivity"],
  
  "shortcuts": [
    {
      "name": "Boutique",
      "short_name": "Shop",
      "description": "Voir tous les produits disponibles",
      "url": "./?page=shop#shop",
      "icons": [
        {
          "src": "./icons/android-launchericon-192-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mon Panier",
      "short_name": "Panier",
      "description": "Accéder à mon panier d'achat",
      "url": "./?cart=open",
      "icons": [
        {
          "src": "./icons/android-launchericon-192-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Produits VIP",
      "short_name": "VIP",
      "description": "Produits exclusifs pour membres VIP",
      "url": "./?filter=vip#shop",
      "icons": [
        {
          "src": "./icons/android-launchericon-192-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Nouveautés",
      "short_name": "New",
      "description": "Découvrir les derniers produits",
      "url": "./?filter=new#shop",
      "icons": [
        {
          "src": "./icons/android-launchericon-192-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [],
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "share_target": {
    "action": "./share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "iarc_rating_id": "",
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "note_taking": {},
  
  "scope_extensions": [],
  
  "widgets": [
    {
      "name": "Quick Order",
      "short_name": "QO",
      "description": "Commande rapide - Produits favoris",
      "tag": "quick-order",
      "template": "quick-order-widget",
      "data": "./widget-data.json",
      "type": "application/json",
      "auth": false,
      "update": 3600,
      "icons": [
        {
          "src": "./icons/android-launchericon-192-192.png",
          "sizes": "192x192"
        }
      ],
      "screenshots": [
        {
          "src": "./screenshots/widget-preview.png",
          "sizes": "400x300",
          "label": "Widget Quick Order"
        }
      ]
    },
    {
      "name": "Panier",
      "short_name": "Cart",
      "description": "Voir le contenu du panier",
      "tag": "cart-widget",
      "template": "cart-widget",
      "data": "./widget-cart.json",
      "type": "application/json",
      "auth": false,
      "update": 1800,
      "icons": [
        {
          "src": "./icons/android-launchericon-192-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  
  "file_handlers": [
    {
      "action": "/open-file",
      "name": "Mijoro Documents",
      "accept": {
        "application/pdf": [".pdf"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"],
        "image/webp": [".webp"],
        "image/gif": [".gif"]
      },
      "icons": [
        {
          "src": "./icons/android-launchericon-192-192.png",
          "sizes": "192x192"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+mijoro",
      "url": "/?action=protocol&url=%s"
    }
  ]
}